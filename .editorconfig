# Editor configuration, see http://editorconfig.org
root = true

[*]
indent_size = 2
indent_style = space
charset = utf-8
end_of_line = lf
max_line_length = 120
insert_final_newline = true
trim_trailing_whitespace = true

[*.java]
indent_size = 4
indent_style = space

[*.xml]
# automatisches Umbrechen/Trimmen kann die Semantik vom Inhalt ändern
max_line_length = off
trim_trailing_whitespace = false # Kompatibilität zu maven-dependency-plugin/maven-release-plugin... und damit zu jgitflow

[pom.xml]
indent_size = 2

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[*.{bat,ps1}]
end_of_line = crlf
