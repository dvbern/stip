{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "strict": true,
    "outDir": "../../../../dist/out-tsc",
    "types": [
      "vitest/globals",
      "vitest/importMeta",
      "vite/client",
      "node",
      "vitest"
    ]
  },
  "files": ["test-setup.ts"],
  "include": [
    "vite.config.mts",
    "apps/**/*.test.ts",
    "libs/**/*.test.ts",
    "apps/**/*.spec.ts",
    "libs/**/*.spec.ts",
    "apps/**/*.d.ts",
    "libs/**/*.d.ts"
  ],
  "exclude": ["libs/tooling/**/*", "**/*-e2e/**/*"]
}
