{
  "name": "gesuch-app-event-cockpit",
  "$schema": "../../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/gesuch-app/event/cockpit/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/gesuch-app/event/cockpit",
        "main": "libs/gesuch-app/event/cockpit/src/index.ts",
        "tsConfig": "libs/gesuch-app/event/cockpit/tsconfig.lib.json",
        "assets": ["libs/gesuch-app/event/cockpit/*.md"]
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["libs/gesuch-app/event/cockpit/**/*.ts"]
      }
    }
  },
  "tags": ["type:event", "scope:gesuch-app"]
}
